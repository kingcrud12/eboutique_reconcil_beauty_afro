
{
	"compilerOptions": {
	  "module": "commonjs",
	  "strictNullChecks": false,
	  "target": "es2017",
	  "lib": ["es2017"],
	  "declaration": false,
	  "removeComments": true,
	  "noEmitOnError": false,
	  "emitDecoratorMetadata": true,
	  "experimentalDecorators": true,
	  "allowSyntheticDefaultImports": true,
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "sourceMap": true,
	  "outDir": "./dist",
	  "baseUrl": "./",
	  "paths": {
		"src/*": ["src/*"]
	  },
	  "incremental": true,
	  "skipLibCheck": true,
	  "resolveJsonModule": true,
	  "strict": true,
	  "types": ["jest", "node"]
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "dist"]
  }
  