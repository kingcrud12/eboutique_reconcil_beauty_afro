{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
