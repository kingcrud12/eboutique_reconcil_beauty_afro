{
  "name": "e2e-selenium-tests",
  "version": "1.0.0",
  "description": "Tests E2E automatis√©s avec Selenium WebDriver",
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:chrome": "BROWSER=chrome npm run test",
    "test:firefox": "BROWSER=firefox npm run test",
    "test:headless": "HEADLESS=true npm run test",
    "test:debug": "DEBUG=true npm run test",
    "test:smoke": "jest --config jest.config.js --testNamePattern='smoke'",
    "test:regression": "jest --config jest.config.js --testNamePattern='regression'",
    "check:app": "./scripts/check-app.sh",
    "start:app": "./scripts/start-app.sh",
    "stop:app": "./scripts/stop-app.sh",
    "test:with-check": "npm run check:app && npm test",
    "test:auto": "npm run start:app && npm test && npm run stop:app"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/selenium-webdriver": "^4.1.20",
    "chromedriver": "^142.0.1",
    "geckodriver": "^4.4.0",
    "jest": "^29.7.0",
    "selenium-webdriver": "^4.27.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
